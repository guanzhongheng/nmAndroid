<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemOwner"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/prod_itemColor"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:textSize="13sp" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemVariety"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/prod_itemCgyCode"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemWidth"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/prod_itemThick"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemLenth"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/prod_itemWeight"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemSq"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/prod_itemUnit"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_ordCode"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/prod_barCode"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemYcType"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/prod_itemYbType"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/prod_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="确定出库" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>